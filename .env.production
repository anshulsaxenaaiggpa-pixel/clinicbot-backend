# Production Environment Variables
# Copy to .env and fill in actual values

# ==================== DATABASE ====================
DATABASE_URL=postgresql://user:password@host:5432/clinicbot
REDIS_URL=redis://default:password@host:6379

# ==================== API SETTINGS ====================
API_V1_PREFIX=/api/v1
PROJECT_NAME=ClinicBot.ai
ENVIRONMENT=production

# ==================== SECURITY ====================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=https://clinicbot.app,https://www.clinicbot.app

# ==================== WHATSAPP - TWILIO ====================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ==================== WHATSAPP - META (OPTIONAL) ====================
META_VERIFY_TOKEN=your-random-verify-token
META_WHATSAPP_TOKEN=EAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
META_PHONE_NUMBER_ID=123456789012345

# ==================== OPENAI ====================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==================== MONITORING (OPTIONAL) ====================
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# ==================== CELERY ====================
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
